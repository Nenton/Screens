<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_volume_up_white_24dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_school_help_history"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/school_help"/>

                <ImageView
                    android:id="@+id/clear_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/image_school_help_history"
                    android:padding="8dp"
                    android:src="@drawable/ic_clear_black_24dp"/>

                <EditText
                    style="@style/Field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="0dp"
                    android:layout_toLeftOf="@+id/search_history"
                    android:layout_toRightOf="@id/clear_history"
                    android:hint="Send Student a Message"
                    android:textSize="@dimen/text_size_middle"/>

                <ImageView
                    android:id="@+id/search_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_search_black_24dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Prototype Cells"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">

                <ImageView
                    android:id="@+id/image_school_pass_requests"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/school_help"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toLeftOf="@+id/duration_pass_requests"
                    android:layout_toRightOf="@+id/image_school_pass_requests"
                    android:orientation="vertical">

                    <TextClock
                        style="@style/TextClockAll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            style="@style/Field"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="8dp"
                            android:enabled="false"
                            android:gravity="top"
                            android:text="Auditorium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="TO"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_middle"
                            android:textStyle="italic"/>

                        <EditText
                            style="@style/Field"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:enabled="false"
                            android:gravity="center_vertical"
                            android:text="Restroom"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_small"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/duration_pass_requests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small"/>

                    <TextClock
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:format12Hour="h:mm"
                        android:format24Hour="h:mm"
                        android:textSize="48sp"/>
                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:text="Pass Information"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_big"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/WrapTextHistory">

                        <TextView
                            style="@style/TextHistoryArticle"
                            android:text="Name"/>

                        <TextView
                            style="@style/TextHistoryField"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:text="Jamie Gant"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/WrapTextHistory">

                        <TextView
                            style="@style/TextHistoryArticle"
                            android:text="From"/>

                        <TextView
                            style="@style/TextHistoryField"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:text="174 (quarles)"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/WrapTextHistory">

                        <TextView
                            style="@style/TextHistoryArticle"
                            android:text="To"/>

                        <TextView
                            style="@style/TextHistoryField"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:text="202 (Gant)"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/WrapTextHistory">

                        <TextView
                            style="@style/TextHistoryArticle"
                            android:text="Depart"/>

                        <TextClock
                            android:id="@+id/textView2"
                            style="@style/TextHistoryField"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/WrapTextHistory">

                        <TextView
                            style="@style/TextHistoryArticle"
                            android:text="Return"/>

                        <TextClock
                            style="@style/TextHistoryField"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:text="Jamie Gant"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/WrapTextHistory">

                        <TextView
                            style="@style/TextHistoryArticle"
                            android:text="Comment"/>

                        <TextView
                            style="@style/TextHistoryField"
                            android:minLines="3"
                            android:minWidth="100dp"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/image"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            android:text="Image"
                            android:textSize="@dimen/text_size_middle"/>

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/image"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            android:text="Image"
                            android:textSize="@dimen/text_size_middle"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/light_blue"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Duration"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold"/>

                        <TextClock
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:format12Hour="h:mm"
                            android:format24Hour="h:mm"
                            android:textAlignment="center"
                            android:textSize="48sp"/>
                    </LinearLayout>

                    <TextClock
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:format12Hour="EE MMM dd, yyyy"
                        android:format24Hour="EE MMM dd, yyyy"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size_middle"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="Map"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_big"
                android:textStyle="italic"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/grey"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        app:elevation="16dp"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:layout_insetEdge="bottom"
        app:menu="@menu/menu_bottom_navigation"/>

</RelativeLayout>