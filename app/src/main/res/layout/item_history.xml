<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/spacing_normal_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_history_teacher"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            tools:text="Jamie"
            android:textSize="@dimen/font_medium_16"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/item_history_room"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            tools:text="102"
            android:textSize="@dimen/font_medium_16"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_history_date_start"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            tools:text="12:12:12 12 Nov 1994"
            android:textSize="@dimen/font_medium_16"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/item_history_date_end"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            tools:text="13:12:12 12 Nov 1994"
            android:textSize="@dimen/font_medium_16"
            android:textColor="@color/black"/>
    </LinearLayout>


</LinearLayout>