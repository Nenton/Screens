<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlueRadioBtn">
        <item name="android:background">@drawable/blue_radio_btn_state</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:button">@null</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/blue_radio_btn</item>
    </style>

    <style name="BlueBtn">
        <item name="android:background">@drawable/blue_btn_state</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/blue_radio_btn</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Field">
        <item name="android:background">@drawable/text_field</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>
</resources>
